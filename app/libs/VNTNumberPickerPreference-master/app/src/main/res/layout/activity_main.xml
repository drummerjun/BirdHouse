<RelativeLayout android:id="@+id/container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding"
                tools:context="com.vanniktech.vntnumberpickerpreference.sample.MainActivity"
                tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/check_it_out_on_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/body_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_it_out_on_github"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_size"
        android:contentDescription="@string/preview_content_description"
        android:paddingTop="@dimen/padding"
        android:src="@drawable/preview"/>

</RelativeLayout>