<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <View android:id="@+id/vertical_separator"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent"/>
    <View android:id="@+id/horizontal_separator"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_height="1dp"/>
    <LinearLayout android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/vertical_separator"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:padding="6dp"
        android:background="@drawable/selector_big_button"
        android:orientation="vertical">
        <ImageView android:id="@+id/button_image_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="6dp"
            app:srcCompat="@drawable/selector_humi"/>
        <TextView android:id="@+id/button_text_0"
            android:text="@string/pref_switch_toggle_humidity"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@drawable/selector_button_text"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_height="0dp" />
    </LinearLayout>
    <LinearLayout android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toEndOf="@id/vertical_separator"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:padding="6dp"
        android:background="@drawable/selector_big_button"
        android:orientation="vertical">
        <ImageView android:id="@+id/button_image_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="6dp"
            app:srcCompat="@drawable/selector_clock"/>
        <TextView android:id="@+id/button_text_2"
            android:text="@string/pref_switch_toggle_timed"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@drawable/selector_button_text"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_height="0dp" />
    </LinearLayout>
    <LinearLayout android:id="@+id/humidity_control_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button1"
        android:layout_alignStart="@id/button1"
        android:layout_alignEnd="@id/button2"
        android:visibility="gone"
        android:orientation="vertical">
        <Button android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bar"
            android:textColor="@drawable/selector_button_text"
            android:text="@string/humidity_range"/>
        <TextView android:id="@+id/humidity_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorTransparentWhite"/>
        <Button android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_bar"
            android:textColor="@drawable/selector_button_text"
            android:text="@string/pref_timer_start"/>
        <TextView android:id="@+id/start_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorTransparentWhite"/>
        <Button android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_bar"
            android:textColor="@drawable/selector_button_text"
            android:text="@string/title_duration"/>
        <TextView android:id="@+id/duration_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorTransparentWhite"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/time_control_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button1"
        android:layout_alignStart="@id/button1"
        android:layout_alignEnd="@id/button2"
        android:visibility="gone"
        android:orientation="vertical">
        <Button android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bar"
            android:textColor="@drawable/selector_button_text"
            android:text="@string/pref_title_interval"/>
        <TextView android:id="@+id/every_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorTransparentWhite"/>
        <Button android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_bar"
            android:textColor="@drawable/selector_button_text"
            android:text="@string/title_duration"/>
        <TextView android:id="@+id/for_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorTransparentWhite"/>
    </LinearLayout>
</RelativeLayout>